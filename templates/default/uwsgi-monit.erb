check process <%= @name %>
   with pidfile <%= @pidfile %>
   start program = "<%= @start_command %>"
   stop program = "<%= @stop_command %>"

   <% if @options["socket"] %>
    if failed unixsocket <%= @options["socket"] %> then restart
   <% else %>
   if failed host <%= @config["host"] %> port <%= @config["port"] %> then restart
   <% end %>
   if 5 restarts within 5 cycles then timeout
